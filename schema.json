{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"title": "Peruse book schema",
    "type": "object",
    "definitions": {
        "embed": {
            "type": "string",
            "pattern": "^\\|.+\\|.+\\|.+\\|.+\\|$"
        }
    },
	"required": [
        "title", "authors", "cover", "unknown", "description",
        "chapters", "revisions", "license", "sources", "references"
    ],
    "additionalProperties": false,
	"properties": {
        "title": { "type": "string" },
        "authors": {
            "type": "array",
            "items": { "type": "string" }
        },
        "cover": { "$ref": "#/definitions/embed" },
        "unknown": { "$ref": "#/definitions/embed" },
        "description": { "type": "string" },
        "chapters": {
            "type": "array",
            "items": {
                "type": "object",
                "required": ["id", "title", "image"],
                "properties": {
                    "id": { "type": "string", "pattern": "^[a-zA-Z0-9]+$"},
                    "title": { "type": "string" },
                    "image": { "$ref": "#/definitions/embed" },
                    "numbered": { "type": "boolean", "default": "True by default" },
                    "contributors": { "type": "array", "items": { "type": "string" }}
                }
            }
        },
        "revisions": {
            "type": "array",
            "items": {
                "type": "array",
                "minItems": 2,
                "maxItems": 2,
                "items": { "type": "string" }
            }
        },
        "license": { "type": "string" },
        "sources": { "type": "object", "additionalProperties": { "type": "string" } },
        "references": {
            "type": "object",
            "additionalProperties": {
                "oneOf": [
                    { "type": "string" },
                    {
                        "type": "array",
                        "maxItems": 6,
                        "items": [
                            { "type": "string" },
                            { "type": "integer"},
                            { "type": "string" },
                            { "type": "string" },
                            { "type": ["string", "null"], "format": "uri" }
                        ],
                        "additionalItems": { "type": "string"}
                    }
                ]
            }
        }
    }
}